<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.you.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.you.entity.SysUser">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="avatar" property="avatar" />
        <result column="email" property="email" />
        <result column="city" property="city" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updatedTime" />
        <result column="last_login" property="lastLogin" />
        <result column="statu" property="statu" />
        <result column="phone" property="phone" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, avatar, email, city, created_time, updated_time, last_login, statu, phone
    </sql>

    <!-- 根据角色id获取用户信息-->
    <select id="getUserInfoByRoleId" parameterType="Long" resultMap="BaseResultMap">
        select
            u.*
        from
            sys_user u
        left join sys_user_role ur on ur.user_id = u.id
        where
            ur.role_id = #{roleId}
    </select>

    <!-- 根据菜单id获取用户信息-->
    <select id="getUserInfoByMenuId" parameterType="Long" resultMap="BaseResultMap">
        select
            distinct u.*
        from
            sys_user_role ur
        left join sys_role_menu rm on ur.role_id = rm.role_id
        left join sys_user u on ur.user_id = u.id
        where
            rm.menu_id = #{menuId}
    </select>

    <!-- 根据用户id删除角色用户关系-->
    <delete id="deleteUserRoleByUserId">
        delete from sys_user_role where user_id = #{userId}
    </delete>

    <!-- 批量新增用户角色关系 -->
    <insert id="batcSaveUserRole" parameterType="java.util.List">
        insert into sys_user_role(role_id, user_id)
        <foreach collection="list" item="item" separator="union all">
            (select #{item.roleId,jdbcType=DECIMAL}, #{item.userId,jdbcType=DECIMAL} from dual)
        </foreach>
    </insert>
</mapper>
